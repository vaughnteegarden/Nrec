{
  "manifest_version": 2,
  "name": "Native Video Recorder",
  "short_name": "NRec",
  "description": "Native Video Recorder supports recording and saving video locally, without an internet connection.",
  "version": "0.0.2",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/nrec16.png",
    "48": "assets/nrec48.png",
    "128": "assets/nrec128.png"
  },
  
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  
  "permissions": [
    "audioCapture",
    "videoCapture"
  ]
}
